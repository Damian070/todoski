{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@todo/todo/domain": ["libs/todo/domain/src/index.ts"],
      "@todo/todo/data-access": ["libs/todo/data-access/src/index.ts"],
      "@todo/todo/feature": ["libs/todo/feature/src/index.ts"],
      "@todo/todo/shell": ["libs/todo/shell/src/index.ts"],
      "@todo/shared/ui-header": ["libs/shared/ui-header/src/index.ts"],
      "@todo/shared/ui-confirmation-dialog": [
        "libs/shared/ui-confirmation-dialog/src/index.ts"
      ],
      "@todo/todo/ui/ui-todos-table": [
        "libs/todo/ui/ui-todos-table/src/index.ts"
      ],
      "@todo/todo/ui/ui-add-edit-form": [
        "libs/todo/ui-add-edit-form/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
