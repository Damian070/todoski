{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@todo/todos": ["libs/todos/src/index.ts"],
      "@todo/todo/domain": ["libs/todo/domain/src/index.ts"],
      "@todo/todo/data-access": ["libs/todo/data-access/src/index.ts"],
      "@todo/todo/feature": ["libs/todo/feature/src/index.ts"],
      "@todo/todo/shell": ["libs/todo/shell/src/index.ts"],
      "@todo/domain": ["libs/domain/src/index.ts"],
      "@todo/ui-header": ["libs/ui-header/src/index.ts"],
      "@todo/ui-todos-table": ["libs/ui-todos-table/src/index.ts"],
      "ui-add-edit-todo-form": ["dist/ui-add-edit-todo-form"],
      "ui-add-edit-todo-form/*": ["dist/ui-add-edit-todo-form/*"],
      "@todo/shared/ui-add-edit-todo-form": [
        "libs/shared/ui-add-edit-todo-form/src/index.ts"
      ],
      "@todo/todo/shared/ui-add-edit-todo-form": [
        "libs/todo/shared/ui-add-edit-todo-form/src/index.ts"
      ],
      "@todo/ui-todo-table-form-wrapper": [
        "libs/ui-todo-table-form-wrapper/src/index.ts"
      ],
      "@todo/libs/todo/shared/ui-todo-table-form-wrapper": [
        "libs/libs/todo/shared/ui-todo-table-form-wrapper/src/index.ts"
      ],
      "@todo/todo/shared/ui-todo-table-form-wrapper": [
        "libs/todo/shared/ui-todo-table-form-wrapper/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
